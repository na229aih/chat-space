.right-contents__center__top
  .right-contents__center__top__box
    .right-contents__center__top__box__user-name
      = message.user.name
    .right-contents__center__top__box__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")

.right-contents__center__bottom
  - if message.body.present?
    .right-contents__center__bottom__message
      = message.body
      = image_tag message.image.url if message.image.present?