.left-contents__top
  .left-contents__top__user
    .left-contents__top__user__name
      = current_user.name
    .left-contents__top__user__icon
      = link_to new_group_path do
        = fa_icon 'edit', class: 'icon'
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'

.left-contents__bottom
  - current_user.groups.each do |group|
    = link_to group_messages_path(group) do
      .left-contents__bottom__group-name
        = group.name
      .left-contents__bottom__text-name
        = group.show_last_message